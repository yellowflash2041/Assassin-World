<StyleguideExample @title=".btn-icon - sizes (large, default, small)">
  {{#each this.dummy.buttonSizes as |bs|}}
    <DButton @icon="times" @translatedTitle={{bs.text}} @class={{bs.class}} @disabled={{bs.disabled}} />
  {{/each}}
</StyleguideExample>

