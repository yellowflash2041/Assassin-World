<div>
  <DModalBody @rawTitle={{i18n "admin.user.merge.confirmation.title" username=username}}>
    <p>{{html-safe (i18n "admin.user.merge.confirmation.description" username=username targetUsername=targetUsername text=text)}}</p>
    <Input @type="text" @value={{value}} />
  </DModalBody>

  <div class="modal-footer">
    <DButton @class="btn-danger" @action={{action "confirm"}} @icon="trash-alt" @disabled={{mergeDisabled}} @translatedLabel={{mergeButtonText}} />
    <DButton @action={{action "close"}} @label="admin.user.merge.confirmation.cancel" />
  </div>
</div>
