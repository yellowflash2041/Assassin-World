<div class='admin-controls'>
  <div class='search controls'>
    <label>
      {{input type="checkbox" checked=onlyOverridden}}
      {{i18n admin.site_settings.show_overriden}}
    </label>
  </div>
  <div class='controls'>
    {{textField value=filter placeholderKey="type_to_filter"}}
  </div>
</div>

<ul class="nav nav-pills site-settings-nav">
  {{#each category in controller}}
    <li {{bindAttr class="category.nameKey"}}>{{#link-to 'adminSiteSettingsCategory' category.nameKey class=category.nameKey}}{{category.name}}{{/link-to}}</li>
  {{/each}}
</ul>

<hr/>

{{ outlet }}
