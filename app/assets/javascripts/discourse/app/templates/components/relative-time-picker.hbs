<div class="relative-time-picker">
  <Input class="relative-time-duration" @min={{durationMin}} @step={{durationStep}} @type="number" @value={{duration}} @onChange={{action "onChangeDuration"}} @id={{id}} />
  <ComboBox @content={{intervals}} @value={{selectedInterval}} @class="relative-time-intervals" @onChange={{action "onChangeInterval"}} />
</div>
