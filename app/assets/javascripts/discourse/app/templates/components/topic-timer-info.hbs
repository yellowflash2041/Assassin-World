{{#if showTopicTimer}}
  <h3 class="topic-timer-heading">
    <span title={{title}}>
      {{clockIcon}} {{notice}}
    </span>
    <div class="topic-timer-modify">
      {{#if showEdit}}
        <DButton @title="post.controls.edit_timer" @icon="pencil-alt" @class="btn topic-timer-edit no-text" @action={{showTopicTimerModal}} />
      {{/if}}
      {{#if showTrashCan}}
        <DButton @title="post.controls.remove_timer" @icon="trash-alt" @class="btn topic-timer-remove no-text" @action={{removeTopicTimer}} />
      {{/if}}
    </div>
  </h3>
{{/if}}
