<a class="category-title-link" href={{category.url}}>
  <div class="category-text-title">
    <CategoryTitleBefore @category={{category}} />
    {{#if category.read_restricted}}
      {{d-icon lockIcon}}
    {{/if}}
    <span class="category-name">{{dir-span category.name}}</span>
  </div>
  {{#if category.uploaded_logo.url}}
    <CdnImg @src={{category.uploaded_logo.url}} @class="category-logo" @width={{category.uploaded_logo.width}} @height={{category.uploaded_logo.height}} @alt="" />
  {{/if}}
</a>
