<DModalBody @title="user.user_notifications.ignore_duration_title" @autoFocus="false">
  <FutureDateInput @label="user.user_notifications.ignore_duration_when" @input={{ignoredUntil}} @customShortcuts={{timeShortcuts}} @includeDateTime={{false}} @onChangeInput={{action (mut ignoredUntil)}} />
  <p>{{i18n "user.user_notifications.ignore_duration_note"}}</p>
</DModalBody>

<div class="modal-footer">
  <DButton @class="btn-primary ignore-duration-save" @disabled={{saveDisabled}} @label="user.user_notifications.ignore_duration_save" @action={{action "ignore"}} />

  <ConditionalLoadingSpinner @size="small" @condition={{loading}} />
</div>
