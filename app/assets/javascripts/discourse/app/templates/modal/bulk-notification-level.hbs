<div class="bulk-notification-list">
  {{#each notificationLevels as |level|}}
    <div class="controls">
      <label class="radio notification-level-radio">
        <RadioButton @value={{level.id}} @name="notification_level" @selection={{notificationLevelId}} /> <strong>{{level.name}}</strong>
        <div class="description">{{html-safe level.description}}</div>
      </label>
    </div>
  {{/each}}
</div>

<DButton @disabled={{disabled}} @action={{action "changeNotificationLevel"}} @label="topics.bulk.change_notification_level" />
