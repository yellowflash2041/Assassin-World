<DModalBody @title="user.user_notifications.ignore_duration_title" @autoFocus="false">
  <div class="controls tracking-controls">
    <label>{{d-icon "far-eye-slash" class="icon"}} {{i18n "user.user_notifications.ignore_duration_username"}}</label>
    <EmailGroupUserChooser @value={{ignoredUsername}} @onChange={{action "updateIgnoredUsername"}} @options={{hash
        excludeCurrentUser=true
        maximum=1
      }} />
  </div>
  <FutureDateInput @label="user.user_notifications.ignore_duration_when" @input={{readonly ignoredUntil}} @customShortcuts={{timeShortcuts}} @includeDateTime={{false}} @onChangeInput={{action (mut ignoredUntil)}} />
  <p>{{i18n "user.user_notifications.ignore_duration_note"}}</p>
</DModalBody>

<div class="modal-footer">
  <DButton @class="btn-primary" @disabled={{saveDisabled}} @label="user.user_notifications.ignore_duration_save" @action={{action "ignore"}} />
  <ConditionalLoadingSpinner @size="small" @condition={{loading}} />
</div>
