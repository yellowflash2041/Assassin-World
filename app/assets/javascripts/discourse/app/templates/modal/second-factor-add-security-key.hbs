<DModalBody>
  <ConditionalLoadingSpinner @condition={{loading}}>
    {{#if errorMessage}}
      <div class="control-group">
        <div class="controls">
          <div class="alert alert-error">{{errorMessage}}</div>
        </div>
      </div>
    {{/if}}

    <div class="control-group">
      <div class="controls">
        {{html-safe (i18n "user.second_factor.enable_security_key_description")}}
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <Input @value={{securityKeyName}} @id="security-key-name" placeholder="security key name" />
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        {{#unless webauthnUnsupported}}
          <DButton @class="btn-primary add-security-key" @action={{action "registerSecurityKey"}} @label="user.second_factor.security_key.register" />
        {{/unless}}
      </div>
    </div>
  </ConditionalLoadingSpinner>
</DModalBody>
