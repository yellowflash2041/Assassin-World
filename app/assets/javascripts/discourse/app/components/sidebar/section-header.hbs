{{#if @collapsable}}
  <DButton
    @title="sidebar.toggle_section"
    @class="sidebar-section-header sidebar-section-header-collapsable btn-flat"
    @action={{@toggleSectionDisplay}} >

    {{yield}}
  </DButton>
{{else}}
  <span class="sidebar-section-header" title={{i18n "sidebar.toggle_section"}}>
    {{yield}}
  </span>
{{/if}}
