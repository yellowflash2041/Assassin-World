{{#if @collapsable}}
  <span
    role="button"
    title={{i18n "sidebar.toggle_section"}}
    class="sidebar-section-header sidebar-section-header-collapsable"
    {{on "click" @toggleSectionDisplay}}
  >
    {{yield}}
  </span>
{{else}}
  <span class="sidebar-section-header" title={{i18n "sidebar.toggle_section"}}>
    {{yield}}
  </span>
{{/if}}
