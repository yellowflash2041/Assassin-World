{{#if topic}}
  <div class='post-topic'>
    {{#if topic}}
      {{i18n "review.topic"}}
      {{topic-status topic=topic}}
      {{topic-link topic}}
      {{i18n "review.topic_replies" count=topic.reply_count}}
    {{else}}
      {{yield}}
    {{/if}}
  </div>
{{else}}
  {{i18n "topic.deleted"}}
{{/if}}
