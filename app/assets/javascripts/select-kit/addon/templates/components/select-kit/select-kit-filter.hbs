{{#unless this.isHidden}}
  {{!-- filter-input-search prevents 1password from attempting autocomplete --}}
  <Input @tabindex={{0}} class="filter-input" placeholder={{this.placeholder}} @autocomplete="off" @autocorrect="off" @autocapitalize="off" @name="filter-input-search" @spellcheck={{false}} @value={{readonly this.selectKit.filter}} @input={{action "onInput"}} @paste={{action "onPaste"}} @keyDown={{action "onKeydown"}} @keyUp={{action "onKeyup"}} @type="search" />

  {{#if this.selectKit.options.filterIcon}}
    {{d-icon this.selectKit.options.filterIcon class="filter-icon"}}
  {{/if}}
{{/unless}}
