{{#if headerContent}}<div class="header">{{headerContent}}</div>{{/if}}

<div class="body">
  {{#if isLocked}}
    <span class="delete-icon">
      {{d-icon "lock"}}
    </span>
  {{else}}
    <span class="locked-icon" {{action deselect computedContent bubbles=false}}>
      {{d-icon "times"}}
    </span>
  {{/if}}

  <span class="name">
    {{{label}}}
  </span>
</div>

{{#if footerContent}}<div class="footer">{{footerContent}}</div>{{/if}}
