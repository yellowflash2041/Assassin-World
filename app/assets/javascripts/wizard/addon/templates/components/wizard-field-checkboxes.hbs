{{#each this.field.choices as |c|}}
  <div class="checkbox-field-choice {{this.fieldClass}}">
    <label id={{c.id}} value={{c.label}}>
      <Input @type="checkbox" class="wizard-checkbox" @click={{action "changed" value="target"}} @checked={{c.checked}} />
      {{#if c.icon}}
        {{d-icon c.icon}}
      {{/if}}
      {{c.label}}
    </label>
  </div>
{{/each}}
